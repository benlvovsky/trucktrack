<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hypertrack.usecases" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name="com.lvovsky.trucktrack.UseCaseApplication"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar" >

        <!-- Register Activities here -->
        <activity android:name="com.lvovsky.trucktrack.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.lvovsky.trucktrack.LoginActivity"
            android:screenOrientation="portrait"/>

        <activity android:name="com.lvovsky.trucktrack.orderTracking.OrderTracking"
            android:screenOrientation="portrait"/>

        <activity android:name="com.lvovsky.trucktrack.mileageTracking.MileageTracking"
            android:screenOrientation="portrait"/>

        <activity android:name="com.lvovsky.trucktrack.locationBasedAssignment.LocationBasedAssignment"
            android:screenOrientation="portrait"/>

        <activity android:name="com.lvovsky.trucktrack.workforceMonitoring.WorkforceMonitoring"
            android:screenOrientation="portrait"/>

        <activity android:name="com.lvovsky.trucktrack.UseCaseActivity"/>

        <!-- Register Services here -->
        <service android:name="com.lvovsky.trucktrack.firebase.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service
            android:name="com.lvovsky.trucktrack.firebase.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

    </application>
</manifest>